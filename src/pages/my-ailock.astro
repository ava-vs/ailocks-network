---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import MyAilockPage from '../components/Ailock/MyAilockPage';
---

<Layout title="My Ailock - AI Companion">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
    <Header client:load />
    
    <main class="max-w-7xl mx-auto px-6 py-8">
      <!-- Back to App Button -->
      <div class="mb-6">
        <a 
          href="/" 
          class="inline-flex items-center space-x-2 text-blue-400 hover:text-blue-300 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          <span>Back to App</span>
        </a>
      </div>

      <!-- Page Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-white mb-4">My Ailock</h1>
        <p class="text-white/60 text-lg">Your personal AI companion that grows and evolves with you</p>
      </div>

      <!-- Ailock Dashboard is rendered by the client component -->
      <MyAilockPage client:load />
    </main>
  </div>
</Layout> 