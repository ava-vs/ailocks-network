---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Upgrade Successful - Ailocks">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center px-6">
    <div class="max-w-md w-full text-center">
      <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-8 shadow-2xl">
        <!-- Success Icon -->
        <div class="w-20 h-20 bg-gradient-to-br from-emerald-500 to-green-600 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>

        <h1 class="text-2xl font-bold text-white mb-4">Upgrade Successful!</h1>
        <p class="text-white/70 mb-8">
          Welcome to your new plan! You now have access to premium features and enhanced AI capabilities.
        </p>

        <div class="space-y-4">
          <a 
            href="/"
            class="block w-full bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white py-3 rounded-xl font-medium transition-all"
          >
            Return to App
          </a>
          <a 
            href="/pricing"
            class="block w-full bg-white/5 hover:bg-white/10 text-white py-3 rounded-xl font-medium transition-all border border-white/10"
          >
            View Plans
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>